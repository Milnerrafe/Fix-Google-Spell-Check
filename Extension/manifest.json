{
  "manifest_version": 3,
  "name": "Fix Google Spell Check",
  "version": "1.0",
  "description": "Bring back the good old google spell check",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Fix Google Spell Check",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.google.com/*",
        "*://www.google.co.uk/*",
        "*://www.google.ca/*",
        "*://www.google.com.au/*",
        "*://www.google.co.in/*"
      ],
      "js": ["content_script.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
